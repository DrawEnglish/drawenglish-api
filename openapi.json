{
  "openapi": "3.0.3",
  "info": {
    "title": "DrawEnglish API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://drawenglish-api.onrender.com"
    }
  ],
  "paths": {
    "/analyze": {
      "post": {
        "operationId": "analyzeSentence",
        "summary": "Analyze an English sentence",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sentence": {
                    "type": "string"
                  }
                },
                "required": ["sentence"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sentence": { "type": "string" },
                    "diagramming": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
